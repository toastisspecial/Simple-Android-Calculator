<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.peter.calculator.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textviewAnswer"
            android:background="#bfb6b6"
            android:textSize="@dimen/abc_text_size_display_1_material"
            android:gravity="center_vertical|right"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1"
            android:id="@+id/button1"
            android:layout_weight="1"
            android:textSize="@dimen/abc_text_size_display_2_material"
            android:onClick="numberPressed" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2"
            android:id="@+id/button2"
            android:layout_weight="1"
            android:textSize="@dimen/abc_text_size_display_2_material"
            android:onClick="numberPressed" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="3"
            android:id="@+id/button3"
            android:layout_weight="1"
            android:textSize="@dimen/abc_text_size_display_2_material"
            android:onClick="numberPressed" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="4"
            android:id="@+id/button4"
            android:layout_weight="1"
            android:textSize="@dimen/abc_text_size_display_2_material"
            android:onClick="numberPressed" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="5"
            android:id="@+id/button5"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:textSize="@dimen/abc_text_size_display_2_material"
            android:onClick="numberPressed" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="6"
            android:id="@+id/button6"
            android:layout_weight="1"
            android:textSize="@dimen/abc_text_size_display_2_material"
            android:onClick="numberPressed" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="7"
            android:id="@+id/button7"
            android:layout_weight="1"
            android:textSize="@dimen/abc_text_size_display_2_material"
            android:onClick="numberPressed" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="8"
            android:id="@+id/button8"
            android:layout_weight="1"
            android:textSize="@dimen/abc_text_size_display_2_material"
            android:onClick="numberPressed" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="9"
            android:id="@+id/button9"
            android:layout_weight="1"
            android:textSize="@dimen/abc_text_size_display_2_material"
            android:onClick="numberPressed" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="+"
            android:id="@+id/buttonPlus"
            android:layout_weight="1"
            android:textSize="@dimen/abc_text_size_display_2_material"
            android:onClick="plusClick" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0"
            android:id="@+id/button0"
            android:layout_weight="1"
            android:textSize="@dimen/abc_text_size_display_2_material"
            android:onClick="numberPressed" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="-"
            android:id="@+id/buttonMinus"
            android:layout_weight="1"
            android:textSize="@dimen/abc_text_size_display_2_material"
            android:onClick="minusClick" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="5">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="="
            android:id="@+id/buttonEquals"
            android:textSize="@dimen/abc_text_size_display_2_material"
            android:onClick="equalClick"
            android:layout_weight="4" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="C"
            android:id="@+id/buttonClear"
            android:textSize="@dimen/abc_text_size_display_2_material"
            android:onClick="clearClick"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>
